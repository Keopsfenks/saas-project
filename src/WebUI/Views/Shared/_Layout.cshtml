                        <div class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                            <a href="/User/Edit/@(HttpContextAccessor.HttpContext.User.Claims.First(c => c.Type == ClaimTypes.NameIdentifier).Value)" class="dropdown-item">Profil</a>
