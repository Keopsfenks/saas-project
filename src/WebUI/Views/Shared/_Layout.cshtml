                </div>
                <div class="collapse navbar-collapse" id="sidebar-menu">
                    <ul class="navbar-nav pt-lg-3">
                        @foreach (var menu in ViewData["Menu"] as IList<MenuModel> ?? Enumerable.Empty<MenuModel>())
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle @(menu.Children.Where(w=>w.IsHiddenMenu == false).Any(a=> a.Action == HttpContextAccessor.HttpContext.Request.RouteValues["controller"].ToString()) ? "show" :"")" href="#navbar-layout" data-bs-toggle="dropdown" data-bs-auto-close="false" role="button"
                                   aria-expanded="true">
                                    <span class="nav-link-icon d-md-none d-lg-inline-block">
                                        <!-- Download SVG icon from http://tabler-icons.io/i/layout-2 -->
                                        @Html.Raw(menu.Icon)
                                    </span>
                                    <span class="nav-link-title">
                                        @(SharedLocalizer[menu.Name])
                                    </span>
                                </a>
                                <div class="dropdown-menu @(menu.Children.Where(w=>w.IsHiddenMenu == false).Any(a=> a.Action == HttpContextAccessor.HttpContext.Request.RouteValues["controller"].ToString()) ? "show" :"")">
                                    <div class="dropdown-menu-columns">
                                        @foreach (var menuInner in menu.Children.Where(w => w.IsHiddenMenu == false).OrderBy(o => o.Order) ?? Enumerable.Empty<MenuModel>())
                                        {
                                            <a class="dropdown-item @(HttpContextAccessor.HttpContext.Request.RouteValues["controller"].ToString() == menuInner.Action ? "active" : "")" href="/@menuInner.Action">
                                                @(SharedLocalizer[menuInner.Name])
                                            </a>
                                        }
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
